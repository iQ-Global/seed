#!/usr/bin/env php
<?php
/**
 * Seed CLI - Command line interface
 */

// Load Composer autoloader
require_once __DIR__ . '/vendor/autoload.php';

// Load environment
$envFile = __DIR__ . '/.env';
if (file_exists($envFile)) {
    $lines = file($envFile, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);
    foreach ($lines as $line) {
        if (strpos(trim($line), '#') === 0) continue;
        
        list($name, $value) = explode('=', $line, 2);
        $name = trim($name);
        $value = trim($value);
        
        if (!array_key_exists($name, $_ENV)) {
            $_ENV[$name] = $value;
            putenv("$name=$value");
        }
    }
}

// Create CLI instance
$cli = new \Seed\Core\CLI();

// Register built-in commands
$cli->register('serve', function($args) use ($cli) {
    $port = $args[0] ?? 8000;
    $cli->info("Starting development server on http://localhost:{$port}");
    $cli->line("Press Ctrl+C to stop.");
    $cli->line("");
    
    passthru("php -S localhost:{$port} -t " . __DIR__);
}, 'Start development server');

$cli->register('routes', function($args) use ($cli) {
    $cli->info("Application Routes:");
    $cli->line("");
    
    // Load routes
    $routesFile = __DIR__ . '/app/routes.php';
    if (!file_exists($routesFile)) {
        $cli->error("Routes file not found.");
        return;
    }
    
    $cli->warning("Note: This is a basic display. Full route inspection coming soon.");
    $cli->line("");
}, 'List all registered routes');

$cli->register('clear:cache', function($args) use ($cli) {
    $cachePath = __DIR__ . '/app/storage/cache';
    
    if (!is_dir($cachePath)) {
        $cli->warning("Cache directory doesn't exist.");
        return;
    }
    
    // Clear cache files
    $files = glob($cachePath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Cache cleared! ({$count} files deleted)");
}, 'Clear cache files');

$cli->register('clear:sessions', function($args) use ($cli) {
    $sessionPath = __DIR__ . '/app/storage/sessions';
    
    if (!is_dir($sessionPath)) {
        $cli->warning("Session directory doesn't exist.");
        return;
    }
    
    // Clear session files
    $files = glob($sessionPath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Sessions cleared! ({$count} files deleted)");
}, 'Clear session files');

$cli->register('clear:logs', function($args) use ($cli) {
    if (!$cli->confirm("Are you sure you want to delete all log files?")) {
        $cli->info("Operation cancelled.");
        return;
    }
    
    $logPath = __DIR__ . '/app/storage/logs';
    
    if (!is_dir($logPath)) {
        $cli->warning("Log directory doesn't exist.");
        return;
    }
    
    // Clear log files
    $files = glob($logPath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Logs cleared! ({$count} files deleted)");
}, 'Clear log files');

$cli->register('check:case', function($args) use ($cli) {
    $fix = in_array('--fix', $args);
    $basePath = __DIR__;
    $appPath = $basePath . '/app';
    $systemPath = $basePath . '/system';
    
    $cli->info("Checking PSR-4 case compliance...");
    $cli->line("");
    
    $issues = [];
    
    // Scan for PHP files with namespaces
    $iterator = new RecursiveIteratorIterator(
        new RecursiveDirectoryIterator($appPath, RecursiveDirectoryIterator::SKIP_DOTS)
    );
    
    foreach ($iterator as $file) {
        if ($file->getExtension() !== 'php') {
            continue;
        }
        
        $content = file_get_contents($file->getPathname());
        
        // Extract namespace
        if (!preg_match('/^\s*namespace\s+([^;]+);/m', $content, $matches)) {
            continue; // No namespace, skip
        }
        
        $namespace = trim($matches[1]);
        
        // Convert namespace to expected path
        // App\Controllers\Dip -> app/Controllers/Dip
        $expectedPath = str_replace('\\', '/', $namespace);
        $expectedPath = preg_replace('/^App/', 'app', $expectedPath);
        
        // Get actual path relative to base
        $actualPath = str_replace($basePath . '/', '', $file->getPath());
        
        // Compare (case-sensitive)
        if ($expectedPath !== $actualPath) {
            $issues[] = [
                'file' => str_replace($basePath . '/', '', $file->getPathname()),
                'namespace' => $namespace,
                'expected' => $expectedPath,
                'actual' => $actualPath
            ];
        }
    }
    
    // Also scan system directory
    $iterator = new RecursiveIteratorIterator(
        new RecursiveDirectoryIterator($systemPath, RecursiveDirectoryIterator::SKIP_DOTS)
    );
    
    foreach ($iterator as $file) {
        if ($file->getExtension() !== 'php') {
            continue;
        }
        
        $content = file_get_contents($file->getPathname());
        
        if (!preg_match('/^\s*namespace\s+([^;]+);/m', $content, $matches)) {
            continue;
        }
        
        $namespace = trim($matches[1]);
        $expectedPath = str_replace('\\', '/', $namespace);
        $expectedPath = preg_replace('/^Seed/', 'system', $expectedPath);
        $actualPath = str_replace($basePath . '/', '', $file->getPath());
        
        if ($expectedPath !== $actualPath) {
            $issues[] = [
                'file' => str_replace($basePath . '/', '', $file->getPathname()),
                'namespace' => $namespace,
                'expected' => $expectedPath,
                'actual' => $actualPath
            ];
        }
    }
    
    if (empty($issues)) {
        $cli->success("âœ“ All directories match their namespace case!");
        $cli->line("");
        $cli->info("Your project is ready for deployment to case-sensitive filesystems (Linux).");
        return;
    }
    
    $cli->error("âœ— Found " . count($issues) . " case mismatch(es):");
    $cli->line("");
    
    foreach ($issues as $issue) {
        $cli->warning("File: " . $issue['file']);
        $cli->line("  Namespace: " . $issue['namespace']);
        $cli->line("  Expected:  " . $issue['expected'] . "/");
        $cli->line("  Actual:    " . $issue['actual'] . "/");
        $cli->line("");
    }
    
    if ($fix) {
        $cli->info("Attempting to fix...");
        $cli->line("");
        
        // Group by directory that needs renaming
        $renames = [];
        foreach ($issues as $issue) {
            $expectedParts = explode('/', $issue['expected']);
            $actualParts = explode('/', $issue['actual']);
            
            // Find first mismatched segment
            for ($i = 0; $i < count($expectedParts) && $i < count($actualParts); $i++) {
                if ($expectedParts[$i] !== $actualParts[$i]) {
                    $parentPath = implode('/', array_slice($actualParts, 0, $i));
                    $from = $basePath . '/' . $parentPath . '/' . $actualParts[$i];
                    $to = $basePath . '/' . $parentPath . '/' . $expectedParts[$i];
                    $renames[$from] = $to;
                    break;
                }
            }
        }
        
        foreach ($renames as $from => $to) {
            if (!is_dir($from)) {
                continue;
            }
            
            $cli->line("Renaming: " . basename($from) . " â†’ " . basename($to));
            
            // Two-step rename for case-insensitive filesystems
            $temp = $from . '_temp_case_fix';
            if (rename($from, $temp) && rename($temp, $to)) {
                $cli->success("  âœ“ Done");
            } else {
                $cli->error("  âœ— Failed");
            }
        }
        
        $cli->line("");
        $cli->info("Run 'composer dump-autoload' to update the autoloader.");
    } else {
        $cli->line("Run 'php seed check:case --fix' to auto-fix these issues.");
        $cli->line("");
        $cli->warning("âš  These mismatches will cause errors on Linux servers!");
    }
}, 'Check PSR-4 namespace/directory case compliance');

$cli->register('version', function($args) use ($cli) {
    $composerFile = __DIR__ . '/composer.json';
    
    if (!file_exists($composerFile)) {
        $cli->error("composer.json not found.");
        return;
    }
    
    $composer = json_decode(file_get_contents($composerFile), true);
    $version = $composer['version'] ?? 'unknown';
    
    $cli->line("");
    $cli->success("ðŸŒ± Seed Framework");
    $cli->line("");
    $cli->info("Version: " . $version);
    $cli->line("PHP: " . PHP_VERSION);
    $cli->line("OS: " . PHP_OS);
    $cli->line("");
    $cli->line("Repository: https://github.com/iQ-Global/seed");
    $cli->line("");
}, 'Show framework version');

$cli->register('update', function($args) use ($cli) {
    $basePath = __DIR__;
    $composerFile = $basePath . '/composer.json';
    $force = in_array('--force', $args);
    $check = in_array('--check', $args);
    
    $cli->line("");
    $cli->info("ðŸŒ± Seed Framework Updater");
    $cli->line("");
    
    // Get current version
    if (!file_exists($composerFile)) {
        $cli->error("composer.json not found.");
        return;
    }
    
    $composer = json_decode(file_get_contents($composerFile), true);
    $currentVersion = $composer['version'] ?? '0.0.0';
    $cli->line("Current version: " . $currentVersion);
    
    // Check latest version from GitHub
    $cli->line("Checking for updates...");
    $cli->line("");
    
    $context = stream_context_create([
        'http' => [
            'header' => "User-Agent: Seed-Updater\r\n",
            'timeout' => 10
        ]
    ]);
    
    $apiUrl = 'https://api.github.com/repos/iQ-Global/seed/releases/latest';
    $response = @file_get_contents($apiUrl, false, $context);
    
    if ($response === false) {
        $cli->error("Could not connect to GitHub. Check your internet connection.");
        return;
    }
    
    $release = json_decode($response, true);
    
    if (!isset($release['tag_name'])) {
        $cli->error("Could not parse release information.");
        return;
    }
    
    $latestVersion = ltrim($release['tag_name'], 'v');
    $cli->line("Latest version:  " . $latestVersion);
    $cli->line("");
    
    // Compare versions
    if (version_compare($currentVersion, $latestVersion, '>=')) {
        $cli->success("âœ“ You're already on the latest version!");
        return;
    }
    
    $cli->warning("âš¡ Update available: " . $currentVersion . " â†’ " . $latestVersion);
    $cli->line("");
    
    if ($check) {
        $cli->info("Run 'php seed update' to install the update.");
        return;
    }
    
    // Show release notes
    if (!empty($release['body'])) {
        $cli->info("Release notes:");
        $cli->line(substr($release['body'], 0, 500) . "...");
        $cli->line("");
    }
    
    // Confirm update
    if (!$force && !$cli->confirm("Do you want to update now?")) {
        $cli->info("Update cancelled.");
        return;
    }
    
    // Download and extract
    $cli->info("Downloading update...");
    
    $zipUrl = $release['zipball_url'] ?? null;
    if (!$zipUrl) {
        $cli->error("Could not find download URL.");
        return;
    }
    
    $tempZip = sys_get_temp_dir() . '/seed-update-' . $latestVersion . '.zip';
    $tempDir = sys_get_temp_dir() . '/seed-update-' . $latestVersion;
    
    // Download zip
    $zipContent = @file_get_contents($zipUrl, false, $context);
    if ($zipContent === false) {
        $cli->error("Failed to download update.");
        return;
    }
    
    file_put_contents($tempZip, $zipContent);
    $cli->success("  âœ“ Downloaded");
    
    // Extract zip
    $cli->info("Extracting...");
    
    $zip = new ZipArchive();
    if ($zip->open($tempZip) !== true) {
        $cli->error("Failed to extract update.");
        @unlink($tempZip);
        return;
    }
    
    // Create temp directory
    @mkdir($tempDir, 0755, true);
    $zip->extractTo($tempDir);
    $zip->close();
    
    // Find the extracted directory (GitHub adds a prefix)
    $extractedDirs = glob($tempDir . '/iQ-Global-seed-*');
    if (empty($extractedDirs)) {
        $cli->error("Could not find extracted files.");
        @unlink($tempZip);
        return;
    }
    
    $sourceDir = $extractedDirs[0];
    $cli->success("  âœ“ Extracted");
    
    // Backup current system directory
    $cli->info("Creating backup...");
    $backupDir = $basePath . '/system.backup-' . date('Y-m-d-His');
    
    if (!rename($basePath . '/system', $backupDir)) {
        $cli->error("Failed to create backup.");
        @unlink($tempZip);
        return;
    }
    $cli->success("  âœ“ Backup created: " . basename($backupDir));
    
    // Copy new system directory
    $cli->info("Installing update...");
    
    if (!rename($sourceDir . '/system', $basePath . '/system')) {
        // Restore backup
        rename($backupDir, $basePath . '/system');
        $cli->error("Failed to install update. Backup restored.");
        @unlink($tempZip);
        return;
    }
    $cli->success("  âœ“ system/ updated");
    
    // Update seed CLI file
    if (file_exists($sourceDir . '/seed')) {
        copy($sourceDir . '/seed', $basePath . '/seed');
        chmod($basePath . '/seed', 0755);
        $cli->success("  âœ“ seed CLI updated");
    }
    
    // Update docs if they exist
    if (is_dir($sourceDir . '/docs')) {
        // Remove old docs and copy new
        $docsBackup = $basePath . '/docs.backup-' . date('Y-m-d-His');
        if (is_dir($basePath . '/docs')) {
            rename($basePath . '/docs', $docsBackup);
        }
        rename($sourceDir . '/docs', $basePath . '/docs');
        $cli->success("  âœ“ docs/ updated");
    }
    
    // Update composer.json version (preserve user's require additions)
    $newComposer = json_decode(file_get_contents($sourceDir . '/composer.json'), true);
    $composer['version'] = $newComposer['version'];
    
    // Merge autoload files (keep user's, add new framework ones)
    if (isset($newComposer['autoload']['files'])) {
        $composer['autoload']['files'] = $newComposer['autoload']['files'];
    }
    
    file_put_contents($composerFile, json_encode($composer, JSON_PRETTY_PRINT | JSON_UNESCAPED_SLASHES) . "\n");
    $cli->success("  âœ“ composer.json updated");
    
    // Cleanup
    @unlink($tempZip);
    
    // Remove backup after 7 days reminder
    $cli->line("");
    $cli->success("âœ“ Update complete! Now running version " . $latestVersion);
    $cli->line("");
    $cli->info("Next steps:");
    $cli->line("  1. Run 'composer dump-autoload' to refresh autoloader");
    $cli->line("  2. Test your application");
    $cli->line("  3. Delete backup when satisfied: " . basename($backupDir));
    $cli->line("");
    
}, 'Update framework to latest version');

// Load user commands (if exists)
$userCommands = __DIR__ . '/app/commands.php';
if (file_exists($userCommands)) {
    require_once $userCommands;
}

// Run CLI
$cli->run($argv);

