#!/usr/bin/env php
<?php
/**
 * Seed CLI - Command line interface
 */

// Load Composer autoloader
require_once __DIR__ . '/vendor/autoload.php';

// Load environment
$envFile = __DIR__ . '/.env';
if (file_exists($envFile)) {
    $lines = file($envFile, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);
    foreach ($lines as $line) {
        if (strpos(trim($line), '#') === 0) continue;
        
        list($name, $value) = explode('=', $line, 2);
        $name = trim($name);
        $value = trim($value);
        
        if (!array_key_exists($name, $_ENV)) {
            $_ENV[$name] = $value;
            putenv("$name=$value");
        }
    }
}

// Create CLI instance
$cli = new \Seed\Core\CLI();

// Register built-in commands
$cli->register('serve', function($args) use ($cli) {
    $port = $args[0] ?? 8000;
    $cli->info("Starting development server on http://localhost:{$port}");
    $cli->line("Press Ctrl+C to stop.");
    $cli->line("");
    
    passthru("php -S localhost:{$port} -t " . __DIR__);
}, 'Start development server');

$cli->register('routes', function($args) use ($cli) {
    $cli->info("Application Routes:");
    $cli->line("");
    
    // Load routes
    $routesFile = __DIR__ . '/app/routes.php';
    if (!file_exists($routesFile)) {
        $cli->error("Routes file not found.");
        return;
    }
    
    $cli->warning("Note: This is a basic display. Full route inspection coming soon.");
    $cli->line("");
}, 'List all registered routes');

$cli->register('clear:cache', function($args) use ($cli) {
    $cachePath = __DIR__ . '/app/storage/cache';
    
    if (!is_dir($cachePath)) {
        $cli->warning("Cache directory doesn't exist.");
        return;
    }
    
    // Clear cache files
    $files = glob($cachePath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Cache cleared! ({$count} files deleted)");
}, 'Clear cache files');

$cli->register('clear:sessions', function($args) use ($cli) {
    $sessionPath = __DIR__ . '/app/storage/sessions';
    
    if (!is_dir($sessionPath)) {
        $cli->warning("Session directory doesn't exist.");
        return;
    }
    
    // Clear session files
    $files = glob($sessionPath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Sessions cleared! ({$count} files deleted)");
}, 'Clear session files');

$cli->register('clear:logs', function($args) use ($cli) {
    if (!$cli->confirm("Are you sure you want to delete all log files?")) {
        $cli->info("Operation cancelled.");
        return;
    }
    
    $logPath = __DIR__ . '/app/storage/logs';
    
    if (!is_dir($logPath)) {
        $cli->warning("Log directory doesn't exist.");
        return;
    }
    
    // Clear log files
    $files = glob($logPath . '/*');
    $count = 0;
    
    foreach ($files as $file) {
        if (is_file($file)) {
            unlink($file);
            $count++;
        }
    }
    
    $cli->success("Logs cleared! ({$count} files deleted)");
}, 'Clear log files');

$cli->register('check:case', function($args) use ($cli) {
    $fix = in_array('--fix', $args);
    $basePath = __DIR__;
    $appPath = $basePath . '/app';
    $systemPath = $basePath . '/system';
    
    $cli->info("Checking PSR-4 case compliance...");
    $cli->line("");
    
    $issues = [];
    
    // Scan for PHP files with namespaces
    $iterator = new RecursiveIteratorIterator(
        new RecursiveDirectoryIterator($appPath, RecursiveDirectoryIterator::SKIP_DOTS)
    );
    
    foreach ($iterator as $file) {
        if ($file->getExtension() !== 'php') {
            continue;
        }
        
        $content = file_get_contents($file->getPathname());
        
        // Extract namespace
        if (!preg_match('/^\s*namespace\s+([^;]+);/m', $content, $matches)) {
            continue; // No namespace, skip
        }
        
        $namespace = trim($matches[1]);
        
        // Convert namespace to expected path
        // App\Controllers\Dip -> app/Controllers/Dip
        $expectedPath = str_replace('\\', '/', $namespace);
        $expectedPath = preg_replace('/^App/', 'app', $expectedPath);
        
        // Get actual path relative to base
        $actualPath = str_replace($basePath . '/', '', $file->getPath());
        
        // Compare (case-sensitive)
        if ($expectedPath !== $actualPath) {
            $issues[] = [
                'file' => str_replace($basePath . '/', '', $file->getPathname()),
                'namespace' => $namespace,
                'expected' => $expectedPath,
                'actual' => $actualPath
            ];
        }
    }
    
    // Also scan system directory
    $iterator = new RecursiveIteratorIterator(
        new RecursiveDirectoryIterator($systemPath, RecursiveDirectoryIterator::SKIP_DOTS)
    );
    
    foreach ($iterator as $file) {
        if ($file->getExtension() !== 'php') {
            continue;
        }
        
        $content = file_get_contents($file->getPathname());
        
        if (!preg_match('/^\s*namespace\s+([^;]+);/m', $content, $matches)) {
            continue;
        }
        
        $namespace = trim($matches[1]);
        $expectedPath = str_replace('\\', '/', $namespace);
        $expectedPath = preg_replace('/^Seed/', 'system', $expectedPath);
        $actualPath = str_replace($basePath . '/', '', $file->getPath());
        
        if ($expectedPath !== $actualPath) {
            $issues[] = [
                'file' => str_replace($basePath . '/', '', $file->getPathname()),
                'namespace' => $namespace,
                'expected' => $expectedPath,
                'actual' => $actualPath
            ];
        }
    }
    
    if (empty($issues)) {
        $cli->success("✓ All directories match their namespace case!");
        $cli->line("");
        $cli->info("Your project is ready for deployment to case-sensitive filesystems (Linux).");
        return;
    }
    
    $cli->error("✗ Found " . count($issues) . " case mismatch(es):");
    $cli->line("");
    
    foreach ($issues as $issue) {
        $cli->warning("File: " . $issue['file']);
        $cli->line("  Namespace: " . $issue['namespace']);
        $cli->line("  Expected:  " . $issue['expected'] . "/");
        $cli->line("  Actual:    " . $issue['actual'] . "/");
        $cli->line("");
    }
    
    if ($fix) {
        $cli->info("Attempting to fix...");
        $cli->line("");
        
        // Group by directory that needs renaming
        $renames = [];
        foreach ($issues as $issue) {
            $expectedParts = explode('/', $issue['expected']);
            $actualParts = explode('/', $issue['actual']);
            
            // Find first mismatched segment
            for ($i = 0; $i < count($expectedParts) && $i < count($actualParts); $i++) {
                if ($expectedParts[$i] !== $actualParts[$i]) {
                    $parentPath = implode('/', array_slice($actualParts, 0, $i));
                    $from = $basePath . '/' . $parentPath . '/' . $actualParts[$i];
                    $to = $basePath . '/' . $parentPath . '/' . $expectedParts[$i];
                    $renames[$from] = $to;
                    break;
                }
            }
        }
        
        foreach ($renames as $from => $to) {
            if (!is_dir($from)) {
                continue;
            }
            
            $cli->line("Renaming: " . basename($from) . " → " . basename($to));
            
            // Two-step rename for case-insensitive filesystems
            $temp = $from . '_temp_case_fix';
            if (rename($from, $temp) && rename($temp, $to)) {
                $cli->success("  ✓ Done");
            } else {
                $cli->error("  ✗ Failed");
            }
        }
        
        $cli->line("");
        $cli->info("Run 'composer dump-autoload' to update the autoloader.");
    } else {
        $cli->line("Run 'php seed check:case --fix' to auto-fix these issues.");
        $cli->line("");
        $cli->warning("⚠ These mismatches will cause errors on Linux servers!");
    }
}, 'Check PSR-4 namespace/directory case compliance');

// Load user commands (if exists)
$userCommands = __DIR__ . '/app/commands.php';
if (file_exists($userCommands)) {
    require_once $userCommands;
}

// Run CLI
$cli->run($argv);

