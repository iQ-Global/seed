# =============================================================================
# SEED FRAMEWORK ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your settings
# .env file is git-ignored for security

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME="Seed Framework"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# DATABASE (MySQL/PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=seed
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# -----------------------------------------------------------------------------
# MONGODB (Optional - only if using MongoDB)
# -----------------------------------------------------------------------------
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=seed
MONGODB_USERNAME=
MONGODB_PASSWORD=

# -----------------------------------------------------------------------------
# SESSION
# -----------------------------------------------------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=7200
SESSION_PATH=/

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# AUTHENTICATION (v1.5.0)
# -----------------------------------------------------------------------------
# Account Lockout
AUTH_LOCKOUT_ENABLED=true
AUTH_LOCKOUT_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900

# Email Verification
AUTH_EMAIL_VERIFICATION=true

# Password Reset
AUTH_PASSWORD_RESET_EXPIRATION=3600

# Remember Me
AUTH_REMEMBER_DURATION=604800

# -----------------------------------------------------------------------------
# EMAIL (SMTP)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# AI PROVIDERS (v1.5.0)
# -----------------------------------------------------------------------------
AI_DEFAULT_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_ORGANIZATION=

# Claude (Anthropic)
CLAUDE_API_KEY=
CLAUDE_DEFAULT_MODEL=claude-sonnet-4.5-20250514

# -----------------------------------------------------------------------------
# STORAGE
# -----------------------------------------------------------------------------
STORAGE_DRIVER=local
STORAGE_PATH=app/storage

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_CHANNEL=file
LOG_LEVEL=info
LOG_PATH=app/storage/logs

